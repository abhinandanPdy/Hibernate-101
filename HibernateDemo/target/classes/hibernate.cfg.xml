<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>

    <session-factory>

        <!-- Hibernate 4.3.11 - org.hibernate.dialect.MySQLDialect-->
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property>
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/hibernateDemo</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">root@12345</property>

        <!-- Create table automatically. Properties - Create, Update ... -->
        <property name="hibernate.hbm2ddl.auto">create</property>

        <!--    Shows the SQL query    -->
        <property name="hibernate.show_sql">true</property>

        <!--    Mapping file entry    -->
        <mapping resource="Employee.hbm.xml" />

        <!--    Mapping file entry for Annotated Entity class
        <mapping class="org.abhinandanpdy.Employee"/>
				-->

    </session-factory>

</hibernate-configuration>
